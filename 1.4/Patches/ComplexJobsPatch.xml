<?xml version="1.0" encoding="utf-8" ?>

<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>[FSF] Complex Jobs</li>
			<li>[FSF] Complex Jobs (Legacy Version)</li>
		</mods>
		<match Class="PatchOperationSequence">
		<success>Always</success>
			<operations>
			
			
			<!-- Advanced Light Mechanoids -->
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_LifterPlus"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFRearming</li>
						<li>FSFRefueling</li>
						<li>FSFLoading</li>
						<li>FSFCremating</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_ConstructoidPlus"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFRepair</li>
						<li>FSFDeconstruct</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_FabricorPlus"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFButcher</li>
						<li>FSFBrewing</li>
						<li>FSFDrugs</li>
						<li>FSFFabrication</li>
						<li>FSFMachining</li>
						<li>FSFRefining</li>
						<li>FSFSmelt</li>
						<li>FSFStoneCut</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_AgrihandPlus"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFHarvesting</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_ParamedicPlus"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFNurse</li>
						<li>FSFSurgeon</li>
					</value>
				</li>
			
			<!-- Ultra Light Mechanoids-->
		
			<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_LifterUltra"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFRearming</li>
						<li>FSFRefueling</li>
						<li>FSFLoading</li>
						<li>FSFCremating</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_ConstructoidUltra"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFRepair</li>
						<li>FSFDeconstruct</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_FabricorUltra"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFButcher</li>
						<li>FSFBrewing</li>
						<li>FSFDrugs</li>
						<li>FSFFabrication</li>
						<li>FSFMachining</li>
						<li>FSFRefining</li>
						<li>FSFSmelt</li>
						<li>FSFStoneCut</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_AgrihandUltra"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFHarvesting</li>
					</value>
				</li>
			
				<li Class="PatchOperationAdd">
					<xpath>/Defs/ThingDef[defName = "Mech_ParamedicUltra"]/race/mechEnabledWorkTypes</xpath>
					<value>
						<li>FSFNurse</li>
						<li>FSFSurgeon</li>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
	
</Patch>